@model FoodDelivery.ViewModels.OrderViewModel

<h2>Order Details</h2>

@if (Model != null && Model.OrderProducts != null && Model.OrderProducts.Any())
{
    <table>
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total Price</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderProducts)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>@item.TotalPrice</td>
                    <td><img src="~/Images/Products/@item.ImageUrl" alt="@item.Name" style="max-width: 100px; max-height: 100px;" /></td>
                </tr>
            }
        </tbody>
    </table>

    <p>Total Price: @Model.TotalPrice</p>
    <form method="post" action="@Url.Action("Index", "Payment")">
        <!-- Include any additional form fields or hidden inputs if needed -->
        <input type="submit" value="Pay" />
    </form>
}
else
{
    <p>No items in the order.</p>
}
